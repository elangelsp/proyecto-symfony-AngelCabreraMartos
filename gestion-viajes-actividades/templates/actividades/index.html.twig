{% extends 'base.html.twig' %}

{% block title %}Actividades index{% endblock %}

{% block body %}
    <h1>Actividades index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha_celebracion</th>
                <th>Lugar</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actividade in actividades %}
            <tr>
                <td>{{ actividade.id }}</td>
                <td>{{ actividade.nombre }}</td>
                <td>{{ actividade.fechaCelebracion ? actividade.fechaCelebracion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ actividade.lugar }}</td>
                <td>{{ actividade.viajeroId ? actividade.viajeroId.nombreCompleto : '' }}</td>
                <td>
                    <a href="{{ path('app_actividades_show', {'id': actividade.id}) }}">show</a>
                    <a href="{{ path('app_actividades_edit', {'id': actividade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actividades_new') }}">Create new</a>
    
    <a href="{{ path('app_inicio') }}">Inicio</a>
{% endblock %}
