{% extends 'base.html.twig' %}

{% block title %}Viajero index{% endblock %}

{% block body %}
    <h1>Viajero index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre_completo</th>
                <th>Referencia</th>
                <th>Telefono</th>
                <th>Ciudad</th>
                <th>Pais</th>
                <th>Imagen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for viajero in viajeros %}
